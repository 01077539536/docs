<div class="container">
  <div id="page">
    {{#if heading}}
    <h1 class="pageHeading">{{heading}}</h1>
    {{/if}}
    
    {{#each content.pages}}
      {{#if heading}}
      <h1>{{heading}}</h1>
      {{/if}}
      {{{ content }}}

      <p class="colophon">
        {{#if modifiedPretty}}
          Last modified {{modifiedPretty}}
        {{/if}}
        &nbsp;
        &nbsp;
        &nbsp;
        &nbsp;
        &nbsp;
        {{#if edit_url}}
          Found a typo? Send a
          <a href="{{edit_url}}">pull request!</a>
        {{/if}}

      </p>
    {{/each}}
  </div>
</div>
