fonts = 'Source Sans Pro', 'Lucida Grande', sans-serif
codefonts = 'Source Code Pro', 'Courier', sans-serif

npmred = #cb3837
subpage-link-color = #666
subpage-link-color-active = npmred
text-color = #333

sectionWidth = 640px
navWidth = 240px
headerHeight = 20px

*, *:before, *:after
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

body
  font-family fonts
  color text-color
  margin 0
  padding 0
  font-size 16px

a
  color npmred

header
  height headerHeight
  background npmred
  -webkit-box-shadow: inset 0px -30px 30px 0px rgba(0,0,0,0.15);
  -moz-box-shadow: inset 0px -30px 30px 0px rgba(0,0,0,0.15);
  box-shadow: inset 0px -30px 30px 0px rgba(0,0,0,0.15);
  // background npmred url("/images/tiling-hexagons2.png")
  // border-bottom 5px solid darken(npmred, 50%)
  // border-bottom 8px solid darken(npmred, 100%)

#logo
  display block
  position absolute
  top headerHeight + 30px
  left 30px
  width 100px
  // img


.container
  position relative
  margin 0 auto
  max-width sectionWidth
  padding 0 15px

#page
  margin-top 30px
  transform translateX(-120px)

  h1
    font-size 36px
    font-weight 600
    letter-spacing -0.6px

  h2
    font-size 24px
    // text-transform capitalize
    font-weight 600
    a
      color text-color
      &:hover
        color npmred

p
  line-height 1.5
  font-weight 400

.faint
  opacity 0.7

ul.pages
  list-style none
  margin 0
  padding 0
  line-height 2

  a
    display inline-block
    // min-width 150px
    text-decoration none
    font-size 18px
    font-weight 600

[title="api"], [title="cli"]
  text-transform uppercase


nav
  position absolute
  top headerHeight + 30px
  right 40px
  margin-bottom 100px
  width navWidth

  h2
    font-size 18px
    font-weight 600
    padding-left 0
    a
      text-decoration none

  .pages
    // display none

    a
      display block
      line-height 1.5
      margin 2px 0
      text-decoration none
      color subpage-link-color
      font-size 14px
      &:hover, &.active
        color subpage-link-color-active
        text-decoration underline


// Hide the nav on the home page
[data-page=index]
  nav
    display none


footer
  margin 150px 0 0 0
  a
    display block

@media only screen and (max-width: navWidth + sectionWidth)
  nav
    position relative
    top 0
    left 0
    width 100%
