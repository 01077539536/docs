fonts = 'Source Sans Pro', 'Lucida Grande', sans-serif
codefonts = 'Source Code Pro', 'Courier', sans-serif

npmred = #cb3837
subpage-link-color = #999
subpage-link-color-active = #333

sectionWidth = 600px
navWidth = 300px

*, *:before, *:after
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

body
  font-family fonts
  color #333
  margin 0
  padding 0
  font-size 16px

a
  color npmred

header
  background npmred
  height 7px

#logo
  float none
  clear both
  overflow hidden
  img
    display block
    float left
    max-height 50px
    margin 0
    padding 0
    font-size 0
    &.doc
      opacity 0.8

h1
  font-weight 400
  font-size 28px

h2
  font-weight 400

.container
  position relative
  margin 0 auto
  max-width sectionWidth
  padding 0 15px

#page

  h2
    text-transform capitalize

p
  line-height 1.5
  font-weight 400

nav
  position absolute
  top 30px
  left 20px
  width navWidth
  h2
    padding-left 12px

    &[title="api"], &[title="cli"]
      text-transform uppercase

  // section > a
  //   display none

  a
    display block
    line-height 1.5
    padding 0px 10px
    margin 2px 0
    text-decoration none
    color rgba(npmred, 0.6)
    transition all 0.2s
    border-left 3px solid transparent
    &.active, &:hover
      border-left 3px solid npmred
      color rgba(npmred, 1)
    &.subpage
      color subpage-link-color
      border-left-color transparent
      padding-left 20px
      font-size 14px
      // &:before
      //   content: "\2022"
      //   padding-right 6px
      &:hover, &.active
        color: subpage-link-color-active
        border-left-color subpage-link-color

footer
  a
    display block

@media only screen and (max-width: navWidth + sectionWidth)
  nav
    position relative
    top 0
    left 0
    width 100%
